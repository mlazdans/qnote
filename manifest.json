{
	"manifest_version": 2,
	"name": "QNote",
	"author": "Martins Lazdans",
	"default_locale": "en",
	"description": "Attempt to migrate XNote++ to Thunderbird 78+",
	"version": "0.5",
	"applications": {
		"gecko": {
			"id": "qnote@dqdp.net",
			"strict_min_version": "68.0"
		}
	},
	"icons": {
		"32": "images/icon.svg",
		"48": "images/icon.svg",
		"64": "images/icon.svg"
	},
	"permissions": [
		"messagesRead",
		"storage",
		"unlimitedStorage",
		"downloads",
		"menus",
		"accountsRead"
	],
	"background": {
		"scripts": [
			"scripts/utils.js",
			"scripts/note.js",
			"scripts/qnote.js",
			"scripts/xnote.js",
			"scripts/menu.js",
			"scripts/background.js"
		]
	},
	"options_ui": {
		"page": "html/options.html"
	},
	"message_display_action": {
		"default_title": "QNote",
		"default_icon": "images/icon-disabled.svg"
	},
	"experiment_apis": {
		"qapp": {
			"schema": "schemas/qapp.json",
			"child": {
				"scopes": ["addon_child"],
				"paths": [["qapp"]],
				"script": "api/qapp.js"
			}
		},
		"legacy": {
			"schema": "schemas/legacy.json",
			"child": {
				"scopes": ["addon_child"],
				"paths": [["legacy"]],
				"script": "api/legacy.js"
			}
		},
		"qnote": {
			"schema": "schemas/qnote.json",
			"child": {
				"scopes": ["addon_child"],
				"paths": [["qnote"]],
				"script": "api/qnote.js"
			}
		},
		"xnote": {
			"schema": "schemas/xnote.json",
			"child": {
				"scopes": ["addon_child"],
				"paths": [["xnote"]],
				"script": "api/xnote.js"
			}
		}
	}
}
