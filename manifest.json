{
	"manifest_version": 2,
	"name": "QNote",
	"author": "Martins Lazdans",
	"default_locale": "en",
	"description": "__MSG_description__",
	"version": "0.12.6",
	"applications": {
		"gecko": {
			"id": "qnote@dqdp.net",
			"strict_min_version": "68.2.0",
			"strict_max_version": "128.*"
		}
	},
	"icons": {
		"32": "images/icon.svg",
		"48": "images/icon.svg",
		"64": "images/icon.svg"
	},
	"permissions": [
		"messagesRead",
		"storage",
		"unlimitedStorage",
		"downloads",
		"menus",
		"accountsRead"
	],
	"background": {
		"scripts": [
			"modules/QEventDispatcher.js",
			"modules/DOMLocalizator.js",
			"modules/luxon.js",
			"modules/dateFormat.js",
			"scripts/utils-note.js",
			"scripts/utils-message.js",
			"scripts/utils.js",
			"scripts/menu.js",
			"scripts/notes/Note.js",
			"scripts/notes/QNote.js",
			"scripts/notes/XNote.js",
			"scripts/notes/QNoteFolder.js",
			"scripts/windows/NoteWindow.js",
			"scripts/windows/WebExtensionNoteWindow.js",
			"scripts/windows/XULNoteWindow.js",
			"scripts/background.js"
		]
	},
	"options_ui": {
		"page": "html/options.html"
	},
	"message_display_action": {
		"default_title": "QNote",
		"default_icon": "images/icon-disabled.svg"
	},
	"browser_action": {
		"default_title": "QNote",
		"default_icon": "images/icon-disabled.svg"
	},
	"commands": {
		"qnote": {
			"suggested_key": {
				"default": "Alt+Q"
			},
			"description": "__MSG_toggleqnote__"
		}
	},
	"experiment_apis": {
		"qapp": {
			"schema": "schemas/qapp.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["qapp"]],
				"script": "api/qapp.js"
			}
		},
		"legacy": {
			"schema": "schemas/legacy.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["legacy"]],
				"script": "api/legacy.js"
			}
		},
		"xnote": {
			"schema": "schemas/xnote.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["xnote"]],
				"script": "api/xnote.js"
			}
		},
		"qnote": {
			"schema": "schemas/qnote.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["qnote"]],
				"script": "api/qnote.js"
			}
		},
		"qpopup": {
			"schema": "schemas/qpopup.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["qpopup"]],
				"script": "api/qpopup.js"
			}
		},
		"ResourceUrl": {
			"schema": "schemas/ResourceUrl.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["ResourceUrl"]],
				"script": "api/ResourceUrl.js"
			}
		},
		"NotifyTools": {
			"schema": "schemas/NotifyTools.json",
			"parent": {
				"scopes": ["addon_parent"],
				"paths": [["NotifyTools"]],
				"script": "api/NotifyTools.js",
				"events": ["startup"]
			}
		}
	}
}
